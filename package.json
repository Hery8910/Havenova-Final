{
  "name": "havenova",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:client": "pnpm --filter @havenova/client dev",
    "dev:dashboard": "pnpm --filter @havenova/dashboard dev",
    "build": "pnpm --filter @havenova/client build && pnpm --filter @havenova/dashboard build",
    "lint": "pnpm --recursive lint",
    "check:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "@eslint/js": "^8.57.0",
    "@types/css-modules": "^1.0.5",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^22.18.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "idb-keyval": "^6.2.2",
    "js-cookie": "^3.0.5",
    "localforage": "^1.10.0",
    "next": "^14.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-transition-group": "^4.4.5",
    "uuid": "^11.1.0"
  }
}
