{
  "buildCommand": "pnpm install --frozen-lockfile && pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "ignoreCommand": "pnpm --filter public lint",
  "projects": {
    "public": {
      "rootDirectory": "apps/public",
      "buildCommand": "pnpm --filter public build",
      "installCommand": "pnpm install --frozen-lockfile",
      "outputDirectory": ".next"
    },
    "dashboard": {
      "rootDirectory": "apps/dashboard",
      "buildCommand": "pnpm --filter dashboard build",
      "installCommand": "pnpm install --frozen-lockfile",
      "outputDirectory": ".next"
    }
  }
}
