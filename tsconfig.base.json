{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@havenova/components/*": ["packages/components/*"],
      "@havenova/contexts/*": ["packages/contexts/*"],
      "@havenova/services/*": ["packages/services/*"],
      "@havenova/types/*": ["packages/types/*"],
      "@havenova/utils/*": ["packages/utils/*"]
    },
    "types": ["react", "react-dom"]
  }
}
